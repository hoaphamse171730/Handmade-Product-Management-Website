@page
@model UI.Pages.Checkout.OrderSucessModel
@{
    ViewData["Title"] = "Order Success";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="flex flex-col items-center justify-center bg-gray-100">
    <div class="rounded-lg bg-white p-8 text-center shadow-lg">
        <div class="mb-4 flex items-center justify-center">
            <div class="mb-4 flex items-center justify-center">
                <i class="fas fa-check-circle fa-5x text-green-500"></i>
            </div>
        </div>
        <h1 class="mb-2 text-2xl font-semibold text-gray-800">Order Placed Successfully!</h1>
        <p class="mb-4 text-gray-600">Thank you for your order. Your order has been processed successfully.</p>

        <!-- Link to the home page -->
        <a href="/" class="mt-4 inline-block rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">
            Return to Home
        </a>

        <!-- Link to the order page -->
        <a href="/Order/OrderHistory" class="mt-2 inline-block rounded bg-green-500 px-4 py-2 text-white hover:bg-green-600">
            View My Orders
        </a>
    </div>
</div>
