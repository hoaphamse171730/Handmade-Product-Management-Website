@page
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="mx-auto my-10 max-w-lg rounded-lg border border-green-600 bg-green-50 p-5">
    <h1 class="text-center text-2xl font-bold text-green-800">Password Reset Successful</h1>
    <p class="mt-4 text-center text-green-700">
        Your password has been reset successfully. You can now log in with your new password.
    </p>

    <div class="mt-6 text-center">
        <a href="/Login" class="inline-block rounded bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700">
            Go to Login
        </a>
    </div>
</div>
