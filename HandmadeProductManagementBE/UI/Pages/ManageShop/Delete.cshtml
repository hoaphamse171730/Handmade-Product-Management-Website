@page "{id?}"
@using UI.Pages.Shared
@model UI.Pages.ManageShop.DeleteModel
@{
    ViewData["Title"] = "Delete Shop";
}

<h1 class="text-3xl font-bold text-center mb-6">Delete Shop</h1>
@{
    var errorModel = new ErrorMessageModel
            {
                ErrorMessage = Model.ErrorMessage,
                ErrorDetail = Model.ErrorDetail
            };
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <partial name="_ErrorMessage" model="errorModel" />
}


<h3 class="text-lg text-gray-700 mb-4">Are you sure you want to delete this Shop?</h3>

<div class="bg-white shadow-md rounded-lg p-6">
    <h4 class="text-xl font-bold mb-4">Shop Details</h4>
    <hr class="mb-4" />
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <dt class="font-semibold">Name</dt>
        <dd>@Model.Shop.Name</dd>
        <dt class="font-semibold">Description</dt>
        <dd>@Model.Shop.Description</dd>
        <dt class="font-semibold">Rating</dt>
        <dd>@Model.Shop.Rating</dd>
        <dt class="font-semibold">TotalSales</dt>
        <dd>@Model.Shop.TotalSales</dd>
        <dt class="font-semibold">Owner</dt>
        <dd>@Model.Shop.ownerName</dd>

    </dl>

    <form method="post" class="mt-6">
        <input type="hidden" asp-for="Shop.Id" />
        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
        <a asp-page="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2">Cancel</a>
    </form>
</div>
