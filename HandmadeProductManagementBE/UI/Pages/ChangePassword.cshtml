@page
@model UI.Pages.ChangePasswordModel

<div class="font-[sans-serif]">
    <div class="flex min-h-screen items-center justify-center px-4 py-6">
        <div class="shadow-[0_2px_22px_-4px_rgba(93,96,127,0.2)] max-w-md rounded-lg border border-gray-300 p-6">
            <form method="post" class="space-y-4">
                <div class="mb-8">
                    <h3 class="text-3xl font-extrabold text-gray-800">Change Password</h3>
                    <p class="mt-4 text-sm leading-relaxed text-gray-500">Enter your current password and a new password to change your account password.</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                        <div class="text-red-500">@Model.ErrorMessage</div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                        <div class="text-green-500">@Model.SuccessMessage</div>
                }

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Current Password</label>
                    <div class="relative flex items-center">
                        <input asp-for="CurrentPassword" type="password" required class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm text-gray-800 outline-blue-600" placeholder="Enter current password" />
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">New Password</label>
                    <div class="relative flex items-center">
                        <input asp-for="NewPassword" type="password" required class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm text-gray-800 outline-blue-600" placeholder="Enter new password" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Confirm New Password</label>
                    <div class="relative flex items-center">
                        <input asp-for="ConfirmNewPassword" type="password" required class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm text-gray-800 outline-blue-600" placeholder="Confirm new password" />
                    </div>
                    <span asp-validation-for="ConfirmNewPassword" class="text-red-500"></span>
                </div>

                <div class="!mt-8">
                    <button type="submit" class="w-full rounded-lg bg-blue-600 px-4 py-3 text-sm tracking-wide text-white shadow-xl hover:bg-blue-700 focus:outline-none">
                        Change Password
                    </button>
                </div>
                <div class="!mt-4">
                    <button type="button" onclick="window.history.back();" class="w-full rounded-lg bg-gray-300 px-4 py-3 text-sm tracking-wide text-gray-800 shadow-xl hover:bg-gray-400 focus:outline-none">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
