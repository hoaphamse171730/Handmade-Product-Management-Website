@page
@model UI.Pages.RecoveryModel

<div class="font-[sans-serif]">
    <div class="flex min-h-screen flex-col items-center justify-center px-4 py-6 dark:bg-gray-900">
        <div class="grid w-full max-w-6xl items-center gap-4 md:grid-cols-2">
            <div class="shadow-[0_2px_22px_-4px_rgba(93,96,127,0.2)] max-w-md rounded-lg border border-gray-300 bg-white p-6 dark:bg-gray-800 dark:border-gray-700 max-md:mx-auto">
                <form method="post" class="space-y-4">
                    <div class="mb-8">
                        <h3 class="text-3xl font-extrabold text-gray-800 dark:text-white">Forgot Password?</h3>
                        <p class="mt-4 text-sm leading-relaxed text-gray-500 dark:text-gray-400">
                            Enter your email, and we’ll send you instructions to reset your password.
                        </p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="text-green-500">@Model.StatusMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="text-red-500">@Model.ErrorMessage</div>
                    }

                    <div>
                        <label asp-for="Input.Email" class="mb-2 block text-sm text-gray-800 dark:text-gray-300">Your Email</label>
                        <div class="relative flex items-center">
                            <input asp-for="Input.Email" type="email" required class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm text-gray-800 outline-blue-600 dark:text-gray-300" placeholder="name@company.com" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-red-500"></span>
                    </div>

                    <div class="mt-8">
                        <button type="submit" class="w-full rounded-lg bg-blue-600 px-4 py-3 text-sm tracking-wide text-white shadow-xl hover:bg-blue-700 focus:outline-none">
                            Send Reset Instructions
                        </button>
                    </div>

                    <div class="mt-4">
                        <a href="/Login" class="block w-full rounded-lg bg-gray-300 px-4 py-3 text-center text-sm tracking-wide text-gray-700 shadow-xl hover:bg-gray-400 focus:outline-none">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
            <div class="md:h-[300px] lg:h-[400px] max-md:mt-8">
                <img src="https://readymadeui.com/login-image.webp" class="mx-auto block h-full w-full object-cover max-md:w-4/5" alt="Recovery Image" />
            </div>
        </div>
    </div>
</div>
