@page
@model RegistrationModel
<form method="post">
    <div class="font-[sans-serif] flex flex-col justify-center p-4 sm:h-screen">
        <div class="mx-auto w-full max-w-md rounded-2xl border border-gray-300 p-8">
            <div class="mb-12 text-center">
                <a href="javascript:void(0)">
                    <img src="https://readymadeui.com/readymadeui.svg" alt="logo" class='inline-block w-40' />
                </a>
            </div>
            <div class="space-y-6">
                <div>
                    <label class="mb-2 block text-sm text-gray-800">User Name</label>
                    <input asp-for="UserName" type="text" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 text-sm text-gray-800 outline-blue-500" placeholder="Enter user name" />
                    <span asp-validation-for="UserName" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Full Name</label>
                    <input asp-for="FullName" type="text" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 text-sm text-gray-800 outline-blue-500" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 text-sm text-gray-800 outline-blue-500" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Email</label>
                    <input asp-for="Email" type="text" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 text-sm text-gray-800 outline-blue-500" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Password</label>
                    <div class="relative">
                        <input asp-for="Password" type="password" id="password" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 pr-12 text-sm text-gray-800 outline-blue-500" placeholder="Enter password" />
                        <button type="button" onclick="togglePasswordVisibility('password', 'passwordEyeIcon', 'passwordEyeSlashIcon')" class="absolute right-2 top-1/2 -translate-y-1/2 cursor-pointer p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-gray-600" id="passwordEyeIcon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hidden h-5 w-5 text-gray-600" id="passwordEyeSlashIcon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-500"></span>
                </div>

                <div>
                    <label class="mb-2 block text-sm text-gray-800">Confirm Password</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="w-full rounded-md border border-gray-300 bg-white px-4 py-3 pr-12 text-sm text-gray-800 outline-blue-500" placeholder="Enter confirm password" />
                        <button type="button" onclick="togglePasswordVisibility('confirmPassword', 'confirmEyeIcon', 'confirmEyeSlashIcon')" class="absolute right-2 top-1/2 -translate-y-1/2 cursor-pointer p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-gray-600" id="confirmEyeIcon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hidden h-5 w-5 text-gray-600" id="confirmEyeSlashIcon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-500"></span>
                </div>

                <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox" class="shrink-0 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                    <label for="remember-me" class="ml-3 block text-sm text-gray-800">
                        I accept the <a href="javascript:void(0);" class="ml-1 font-semibold text-blue-600 hover:underline">Terms and Conditions</a>
                    </label>
                </div>
            </div>

            <div class="!mt-12">
                <button type="submit" class="w-full rounded-md bg-blue-600 px-4 py-3 text-sm font-semibold tracking-wider text-white hover:bg-blue-700 focus:outline-none">
                    Create an account
                </button>
            </div>
            <p class="mt-6 text-center text-sm text-gray-800">Already have an account? <a href="/Login" class="ml-1 font-semibold text-blue-600 hover:underline">Login here</a></p>
        </div>
    </div>
</form>

<script>
    function togglePasswordVisibility(inputId, eyeIconId, eyeSlashIconId) {
        const passwordInput = document.getElementById(inputId);
        const eyeIcon = document.getElementById(eyeIconId);
        const eyeSlashIcon = document.getElementById(eyeSlashIconId);

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.classList.add('hidden');
            eyeSlashIcon.classList.remove('hidden');
        } else {
            passwordInput.type = 'password';
            eyeIcon.classList.remove('hidden');
            eyeSlashIcon.classList.add('hidden');
        }
    }
</script>