@page "{id?}"
@model UI.Pages.Promotion.DeleteModel
@{
    ViewData["Title"] = "Delete Promotion";
}

<h1 class="text-3xl font-bold text-center mb-6">Delete Promotion</h1>

<h3 class="text-lg text-gray-700 mb-4">Are you sure you want to delete this promotion?</h3>

<div class="bg-white shadow-md rounded-lg p-6">
    <h4 class="text-xl font-bold mb-4">Promotion Details</h4>
    <hr class="mb-4" />
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <dt class="font-semibold">Name</dt>
        <dd>@Model.Promotion.Name</dd>
        <dt class="font-semibold">Description</dt>
        <dd>@Model.Promotion.Description</dd>
        <dt class="font-semibold">Discount Rate</dt>
        <dd>@Model.Promotion.DiscountRate</dd>
        <dt class="font-semibold">Start Date</dt>
        <dd>@Model.Promotion.StartDate.ToShortDateString()</dd>
        <dt class="font-semibold">End Date</dt>
        <dd>@Model.Promotion.EndDate.ToShortDateString()</dd>
    </dl>

    <form method="post" class="mt-6">
        <input type="hidden" asp-for="Promotion.Id" />
        <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
        <a asp-page="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2">Cancel</a>
    </form>
</div>
